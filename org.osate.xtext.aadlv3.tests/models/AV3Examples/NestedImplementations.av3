package NestedImplementations 
	system interface ControlSystem end;
	
	system ControlSystem.i
	is
		sensing : device { 
			sensedata : out port ;
		} ;
		processing : process {
			filter : thread {
				inp : in port ;
				outp : out port ;
			} ; 
			control : thread {
				inp : in port ;
				outp : out port ;
			} ;
			filtercontrolconn : connection filter.outp -> control.inp ;
		} ;
		actuating : device { 
			inp :  in port ;
		} ;
		sensefilterconn : connection sensing.sensedata -> processing.filter.inp ;
		controlactuateconn : connection processing.control.outp -> actuating.inp;
	end ;
end ;