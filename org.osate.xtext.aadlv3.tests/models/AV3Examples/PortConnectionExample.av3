package PortConnectionExample 
// connections without and with reach down into is
// shared data component

	type systemstate;
	type int;
	property Period: int;
	property Size: int;
	
	interface actuator is
		inp: in port;
		fea: feature;
		action: flow sink  inp ;
	end
	interface sensor is
		outp: out port;
		fea: feature;
		reading: flow source outp;
	end
	
	abstract sensor.i  is
		sub1: thread sense;
		upmap: delegate sub1.p1 -> outp;
		reading => flow upmap -> sub1.reading;
	end
	abstract actuator.i  is
		sub2: thread actuate;
		downmap: delegate inp -> sub2.p1;
		action=> flow sub2.taction;
	end
	thread interface sense  is
		p1: out port ;
		reading: flow  source p1;
	end
	thread interface actuate  is
		p1: in port ;
		taction: flow  sink p1;
	end
	
	thread interface filter is
	insignal : in port;
	outsignal : out port;
	filterpath: flow path insignal -> outsignal;
	#Period => 20 ;
	end
	
	thread interface compute is
	insignal : in port;
	outsignal : out port;
	computepath: flow path insignal -> outsignal;
	end
	
	thread interface logger is
	insignal : in port;
	end
	
	interface control is
	insignal: in port;
	outaction: out port;
	processflow: flow path insignal -> outaction;
	end
	
	process interface controlProcess extends control //is
//	controlIF: interface control;
	end
	
	process controlProcess.impl is
		dofilter: thread filter;
		docompute: thread compute;
		dolog: thread logger;
		extin: delegate insignal -> dofilter.insignal;
		login: delegate insignal -> dolog.insignal;
		ftoc: connection dofilter.outsignal -> docompute.insignal;
		extout: delegate docompute.outsignal -> outaction ;
	end
	
	system interface conntop end
	
	system conntop.i is
		sense: abstract sensor;
		processing: process controlProcess;
		actuate: abstract actuator;
		hw : system hardwareplatform;
		sensetocontrol: connection sense.outp -> processing.insignal;
		controltoactuate: connection processing.outaction -> actuate.inp;
	end
//	system conntop.i is
//		sense: abstract sensor.i;
//		processing: process controlProcess.impl;
//		actuate: abstract actuator.i;
//		hw : system hardwareplatform.impl;
//		sensetocontrol: connection sense.outp -> processing.controlIF.insignal;
//		controltoactuate: connection processing.controlIF.outaction -> actuate.inp;
//	end

configuration conntop.conf extends conntop.i is
    processing => controlProcess.impl;
end
	
	bus interface canbus 
	end
	
	processor interface x86 is
	canbusaccess: requires bus access canbus;
	end
	
	system interface hardwareplatform is
		canbusaccess: provides bus access canbus;
	end
	
	system hardwareplatform.impl is
	cpu: processor x86;
	mybus: bus canbus;
	busconn: connection cpu.canbusaccess <-> mybus;
	extbusaccess: delegate canbusaccess <-> mybus;
	end
	
end